{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "HomeScreenConfiguration": {
    "Width": 240,
    "Height": 120
  },
  "ApiConfiguration": {
    "Endpoint": "https://api.example.com/v1",
    "Username": "your-username-here",
    "Password": "your-password-here",
    "TimeoutSeconds": 30,
    "EnableLogging": true
  },
  "Assets": [
    {
      "Name": "Sample Asset",
      "Id": "asset-001",
      "IsEnabled": true,
      "Interval": 1000,
      "Devices": [
        {
          "Name": "Sample Device",
          "Id": "device-001",
          "IsEnabled": true,
          "Interval": 1000
        }
      ]
    }
  ]
}
