@model RaspiLedOkWeb.Models.ApiConfiguration

@{
    ViewData["Title"] = "Configuration";
}

<!-- Include Alert Partial -->
@await Html.PartialAsync("_Alerts")

<!-- Ultra Modern Page Header -->
<div class="page-header slide-up">
    <div class="d-flex align-items-center justify-content-between flex-wrap">
        <div class="mb-3 mb-md-0">
            <h1 class="page-title text-gradient">
                <i class="bi bi-gear-fill me-3"></i>Configuration Hub
            </h1>
            <p class="page-subtitle">Advanced IoT device management and API configuration</p>
        </div>
        <div class="d-flex gap-3">
            <button class="btn btn-outline-primary btn-sm premium-glow" onclick="loadAssets()">
                <i class="bi bi-arrow-clockwise"></i> Refresh Assets
            </button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        @await Html.PartialAsync("_ApiConfigurationForm", Model)
    </div>
    
    <div class="col-lg-4">
        @await Html.PartialAsync("_ConfigurationStatus", Model)
        
        @await Html.PartialAsync("_AssetSyncCard")
    </div>
</div>

<!-- Assets Management Section -->
<div class="row mt-5">
    <div class="col-12">
        @await Html.PartialAsync("_AssetManagementHub")
    </div>
</div>

@section Scripts {
    <script src="~/js/configuration.js"></script>
}
