<!-- Ultra Modern Asset Sync Card -->
<div class="card shadow-colored premium-glow slide-up">
    <div class="card-header">
        <div class="d-flex align-items-center">
            <div class="p-2 rounded-circle me-3" style="background: var(--success-gradient-light);">
                <i class="bi bi-cloud-download text-success fs-5"></i>
            </div>
            <div>
                <h5 class="mb-0 fw-bold">Asset Synchronization</h5>
                <small class="text-muted">Sync devices from API</small>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="text-center mb-4">
            <div class="rounded-circle p-4 d-inline-flex align-items-center justify-content-center mb-3" style="background: var(--success-gradient-light); width: 80px; height: 80px;">
                <i class="bi bi-download fs-2 text-success"></i>
            </div>
            <p class="text-muted mb-0">Pull the latest asset and device configurations from your API endpoint to manage IoT infrastructure.</p>
        </div>
        
        <button type="button" class="btn btn-success w-100 btn-lg mb-3" onclick="syncAssets()" id="syncBtn">
            <i class="bi bi-cloud-download me-2"></i>Start Synchronization
        </button>
        
        <div id="syncResult"></div>
        
        <div class="mt-3 p-3 rounded-3" style="background: var(--bg-secondary);">
            <div class="d-flex align-items-center">
                <i class="bi bi-info-circle text-primary me-2"></i>
                <small class="text-muted">Last sync will fetch all available assets and their associated devices for configuration.</small>
            </div>
        </div>
    </div>
</div>