@model RaspiLedOkWeb.Models.ApiConfiguration

<!-- Modern Status Overview -->
<div class="card shadow-soft mb-4 slide-up">
    <div class="card-header">
        <div class="d-flex align-items-center">
            <div class="p-2 rounded-circle me-3" style="background: var(--info-gradient); background: linear-gradient(135deg, rgba(78, 205, 196, 0.1) 0%, rgba(68, 160, 141, 0.05) 100%);">
                <i class="bi bi-graph-up-arrow text-info fs-5"></i>
            </div>
            <div>
                <h5 class="mb-0 fw-bold">Configuration Status</h5>
                <small class="text-muted">Current system settings</small>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="mb-4">
            <div class="d-flex align-items-center mb-2">
                <div class="rounded-circle p-2 me-3" style="background: var(--primary-gradient-light);">
                    <i class="bi bi-globe2 text-primary"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="fw-bold text-gradient-secondary">API Endpoint</div>
                    <div class="text-muted small text-break">@Model.ApiUrl</div>
                </div>
            </div>
        </div>
        
        <div class="mb-4">
            <div class="d-flex align-items-center mb-2">
                <div class="rounded-circle p-2 me-3" style="background: var(--success-gradient); background: linear-gradient(135deg, rgba(6, 214, 160, 0.1) 0%, rgba(17, 141, 87, 0.05) 100%);">
                    <i class="bi bi-person-check text-success"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="fw-bold text-gradient-success">Authentication</div>
                    <div class="text-muted small">@(string.IsNullOrEmpty(Model.Username) ? "Not configured" : "User: " + Model.Username.Substring(0, Math.Min(4, Model.Username.Length)) + "***")</div>
                </div>
            </div>
        </div>
        
        <div class="mb-4">
            <div class="d-flex align-items-center mb-2">
                <div class="rounded-circle p-2 me-3" style="background: var(--warning-gradient); background: linear-gradient(135deg, rgba(247, 37, 133, 0.1) 0%, rgba(181, 23, 158, 0.05) 100%);">
                    <i class="bi bi-stopwatch text-warning"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="fw-bold">Request Timeout</div>
                    <div class="text-muted small">@Model.TimeoutSeconds seconds</div>
                </div>
            </div>
        </div>
        
        <div class="d-flex align-items-center justify-content-between p-3 rounded-3" style="background: var(--primary-gradient-light);">
            <div class="d-flex align-items-center">
                <i class="bi bi-journal-code text-primary me-2"></i>
                <span class="fw-bold text-primary">Debug Logging</span>
            </div>
            <span class="badge @(Model.EnableLogging ? "bg-success" : "bg-secondary")">
                @(Model.EnableLogging ? "Active" : "Inactive")
            </span>
        </div>
    </div>
</div>