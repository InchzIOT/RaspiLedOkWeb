<!-- Ultra Modern Assets Management Section -->
<div class="card shadow-xl premium-glow bounce-in">
    <div class="card-header">
        <div class="d-flex align-items-center justify-content-between flex-wrap">
            <div class="d-flex align-items-center mb-2 mb-md-0">
                <div class="p-3 rounded-circle me-3" style="background: var(--primary-gradient);">
                    <i class="bi bi-diagram-3 text-white fs-4"></i>
                </div>
                <div>
                    <h4 class="mb-0 fw-bold text-gradient">Smart Asset Management</h4>
                    <p class="mb-0 text-muted">Configure and monitor your IoT device ecosystem</p>
                </div>
            </div>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-primary premium-glow" onclick="loadAssets()">
                    <i class="bi bi-arrow-clockwise me-1"></i> Refresh
                </button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div id="assetsContainer">
            <div class="text-center py-5">
                <div class="mb-4">
                    <div class="rounded-circle p-4 d-inline-flex align-items-center justify-content-center mb-3" 
                         style="background: var(--primary-gradient-light); width: 120px; height: 120px;">
                        <i class="bi bi-diagram-3-fill display-4 text-primary"></i>
                    </div>
                </div>
                <h4 class="text-gradient mb-3">Asset Hub Awaiting Configuration</h4>
                <p class="text-muted mb-4 fs-5">Connect to your API and synchronize assets to begin managing your IoT infrastructure</p>
                <button class="btn btn-primary btn-lg premium-glow" onclick="syncAssets()">
                    <i class="bi bi-cloud-download me-2"></i>Initialize Asset Discovery
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Asset Details Modal -->
<div class="modal fade" id="assetModal" tabindex="-1" aria-labelledby="assetModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title d-flex align-items-center" id="assetModalLabel">
                    <i class="bi bi-collection me-2"></i>
                    <span id="modalAssetName">Asset Details</span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-tag text-muted me-2"></i>
                            <span class="fw-semibold">Asset ID:</span>
                            <span class="ms-2" id="modalAssetId">-</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-clock text-muted me-2"></i>
                            <span class="fw-semibold">Interval:</span>
                            <span class="ms-2" id="modalAssetInterval">-</span>
                        </div>
                    </div>
                </div>
                
                <div class="mb-4">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="modalAssetEnabled">
                        <label class="form-check-label fw-semibold" for="modalAssetEnabled">
                            <i class="bi bi-power me-1"></i>Enable Asset
                        </label>
                    </div>
                </div>
                
                <hr>
                
                <h6 class="mb-3">
                    <i class="bi bi-cpu me-2"></i>Devices
                    <span class="badge bg-primary" id="deviceCount">0</span>
                </h6>
                
                <div id="modalDevicesContainer">
                    <!-- Devices will be loaded here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="saveAssetChanges()">
                    <i class="bi bi-check-lg me-1"></i>Save Changes
                </button>
            </div>
        </div>
    </div>
</div>