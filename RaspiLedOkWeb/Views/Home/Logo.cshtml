        :root {
            --width: @ViewBag.Width;
        }
    </style>
    <div style="width:100%; height: 100%; background-color: #262f40; color:white; display: flex; flex-direction: column;">
        <div style="text-align: center; flex-shrink: 0; height: 100%; margin-bottom: 3%">
            <div style="display: flex; flex-direction: column; align-items: center; justify-content: center; font-size: 75%; color: white; padding: 0; margin: 0; height: 100%; gap: 10px;">
                <div style="height:49%; margin-bottom: 20%">
                    <img src="../images/logombks.png" style="height: 100%" onclick="redirectToConfiguration()" />
                </div>
                <div style="margin-top:-10%">
                    <div style="font-size: 120%;font-weight: bold;letter-spacing: 2px; margin-bottom: 10%;text-align: center;">MAJLIS BANDARAYA KUCHING SELATAN</div>
                    <div style="font-size: 120%; letter-spacing: 2px;">ESG SMART POLE</div>
                </div>
            </div>
        </div>
    </div>
